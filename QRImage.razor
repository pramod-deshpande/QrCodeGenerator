

@if (!string.IsNullOrEmpty(QrImageString))
{
    <MudContainer Class="d-flex justify-center gap-4">
        <a href="@QrImageString" download="QR Code" style="margin-left:auto;margin-right:auto">
            <MudImage Width="300" Height="300" Src="@QrImageString" Alt="QR Code" Elevation="5" Class="rounded-lg mx-auto" />
        </a>
        <MudText Typo="Typo.caption" Align="Align.Center" Color="Color.Secondary">click or tap on the image to download</MudText>
    </MudContainer>
}




@code {
    [Parameter] public string? QrImageString { get; set; }
}
