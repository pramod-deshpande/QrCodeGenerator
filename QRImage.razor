@if (!string.IsNullOrEmpty(QrImageString))
{
    <MudContainer Class="d-flex flex-column justity-center gap-4">
        <a href="@QrImageString" download="QR Code">
            <MudImage Width="300" Height="300" Src="@QrImageString" Alt="QR Code" Elevation="5" Class="rounded-lg" />
        </a>
        <MudText Typo="Typo.caption">click or tap on the image to download</MudText>
    </MudContainer>
}




@code {
    [Parameter] public string? QrImageString { get; set; }
}
