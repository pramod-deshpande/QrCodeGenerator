
@inherits LayoutComponentBase


<MudThemeProvider Theme="CustomTheme"  IsDarkMode="true"/>
<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Surface">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <a href="/"> <MudText Typo="Typo.body1" Color="Color.Primary" Class="ml-3">Generate QR Code</MudText></a>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="1">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="py-5" MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    MudTheme CustomTheme = new MudTheme()
        {
            PaletteDark = new PaletteDark()
            {
                AppbarBackground = "#262528",
                Surface = "#262528",
                Background = "#29272a",
                DrawerBackground = "#262528",

                Primary = "#72cada",
                PrimaryLighten = "#A5FDFF",
                PrimaryDarken = "#3F97A7",

                Secondary = "#DA8272",
                SecondaryDarken = "#A74F3F",
                SecondaryLighten = "#FFB5A5",
            },
            Typography = new()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Space Mono", "monospace" }
                },
            }
        };


}